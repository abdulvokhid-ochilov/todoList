<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>EJS</title>
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= day%></h1>
    </div>
    <div class="box">
      <% items.forEach((item) => {%>
      <form action="/delete" method="POST">
        <div class="item">
          <input
            type="checkbox"
            name="checkbox"
            value="<%=item._id%>"
            onchange="this.form.submit()"
          />
          <p><%=item.name%></p>
        </div>
        <input type="hidden" name="listName" value="<%= day%>" />
      </form>

      <%})%>

      <form class="item" action="/add" method="post">
        <input
          type="text"
          name="todo"
          placeholder="New todo"
          autocomplete="off"
        />
        <button type="submit" name="button" value="<%= day%>">+</button>
      </form>
    </div>
  </body>
</html>
